<h2>输入病人病历</h2>
<%= form_for @patient, url: patients_path do |f|%>
  <div class="form-group">
  <%= f.label :name, "姓名"%>
  <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :gender, "性别"%>
  <%= f.radio_button :gender, true %> <%= f.label :gender, "男" %>
  <%= f.radio_button :gender, false %> <%= f.label :gender, "女"%>
  </div>
  <div class="form-group">
  <%= f.label :age, "年龄"%>
  <%= f.number_field :age, in: 1..150, step: 1, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :idnumber, "身份证号"%>
  <%= f.text_field :idnumber, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :work, "工作"%>
  <%= f.text_field :work, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :education, "文化水平"%>
  <%= f.text_field :education, class: "form-control" %>
  </div>
  <%= f.submit "创建病历", class: "btn btn-primary"%>
<% end %>

<% content_for :side_bar do %>
<%= render "shared/sidebar" %>
<% end %>
